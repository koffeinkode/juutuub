{
  "name": "juutuub",
  "version": "1.0.0",
  "description": "YouTube video og audio nedlaster",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "keywords": ["youtube", "downloader", "electron"],
  "author": "Hallvar",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "yt-dlp-wrap": "^2.3.1"
  },
  "build": {
    "appId": "com.hallvar.juutuub",
    "productName": "JuuTuub",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": "dmg"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}